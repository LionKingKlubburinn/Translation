    ViewBag.Title = "Translation";
}

@Html.ActionLink("Edit", "Edit");
@Html.ActionLink("EditFile", "Edit");
@Html.ActionLink("New", "New");
@Html.ActionLink("Read", "Read");

<style>
    th, td{
        width:150px;
    }
</style>

<div id="LionKing">
    <h3>@Html.DisplayFor(x => x.SubtitleItem.Name)</h3>
</div>

<table>
    <thead>
        <tr>
            <th>Tegund:</th>
