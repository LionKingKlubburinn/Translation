        <tr>
            <td>@Html.DisplayFor(x => x.SubtitleItem.VideoType) @(",") @Html.DisplayFor(x => x.SubtitleItem.VideoGenre)</td>
            <td>@Html.DisplayFor(x => x.SubtitleItem.Contributor)</td>
