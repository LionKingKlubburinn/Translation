
@{
    ViewBag.Title = "New";
}

<div>
    @{Html.RenderPartial("~/Views/Shared/_Search.cshtml");}
</div>

<h2>Ný Þýðing</h2>

@using (Html.BeginForm("New", "Translation", FormMethod.Post))
{
     @("Titill: ")
     @Html.TextBox("Titill")<br />
    
       @("Tungumál þýðingar: ")
          <select id="tungumál">     
             <option selected="selected">Tungumál</option>
             <option value="íslenska">Íslenska</option>
             <option value="enska">Enska</option>
          </select><br />
    
     @("Fyrir heyrnarskerta:")
            @Html.RadioButton("Deaf", "Yes", false)
            @("Já")
            @Html.RadioButton("Deaf", "No", true)
            @("Nei")<br />
    
    @("Mynd:")
    <input type="file" id="fileUpload" /><br />
    @("Skrá til þýðingar:")
    <input type="file" id="fileUpload2" /><br />
    
    @("Leyfa samstarf:")
            @Html.RadioButton("Cooperation", "Yes", false)
            @("Já")
            @Html.RadioButton("Cooperation", "No", true)
            @("Nei")<br />
    
    <input type="button" value="Byrja þýðingu" />
    
}

