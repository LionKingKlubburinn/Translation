@model Translation.Models.TextLine
@Styles.Render("~/Content/Translation.css")
@{
    ViewBag.Title = ViewBag.Name;
}
<!-- TODO: snyrta til? -->
<script type="text/javascript">
    window.onload = function () {
        document.getElementById('Line1').focus();
    }
</script>
<div class="translation-container">
    <div class="subtitle-info">
        <h2>@ViewBag.Name</h2>
        @using (Html.BeginForm("EditFile", "Translation", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>
                        @Html.DisplayFor(model => Model.OriginalText1)
                    </td>
                    <td>
                        <span class="glyphicon glyphicon-arrow-right"></span>
                    </td>
                    <td>
                        @Html.TextBox("Line1", Model.TranslationText1)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => Model.OriginalText2)
                    </td>
                    <td>
                        <span class="glyphicon glyphicon-arrow-right"></span>
                    </td>
                    <td>
                        @Html.TextBox("Line2", Model.TranslationText2)
                    </td>
                </tr>
            </table>
            <input type="hidden" name="linenum" value="@Request.Params["linenum"]" />
            <input type="submit" class="btn btn-default" name="direction" value=">>" />
            <input type="submit" class="btn btn-default" name="direction" value="<<" style="float: left;" /> <br />
            <input type="submit" class="btn btn-default" name="direction" value="Vista og hætta" />
        }
    </div>
    <div class="subtitle-pic">
        <img id="subtitle-img" src="@Url.Content("~/Content/uploads/" + Path.GetFileName(@ViewBag.PicPath))" alt="No image" />
    </div>
    <br style="clear: left;" />
</div>
