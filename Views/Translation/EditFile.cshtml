@model Translation.Models.TextLine
@{
    ViewBag.Title = "EditFromFile";
}

<h2>Breyttu og bættu</h2>

<h2>Lion King</h2>
<h3>Simbalover</h3>

@using (Html.BeginForm("EditFile", "Translation", FormMethod.Post))
{
    <table>
        <tr>
            <td>
                @Html.DisplayFor(model => Model.OriginalText1)
            </td><td>
                <span class="glyphicon glyphicon-arrow-right"></span>
            </td><td>
                <input type="text" name="Line1">
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => Model.OriginalText2)
            </td><td>
                <span class="glyphicon glyphicon-arrow-right"></span>
            </td><td>
                <input type="text" name="Line2">
            </td>
        </tr>
        
    </table>
    <input type="hidden" name="linenum" value="@Request.Params["linenum"]" />
    <input type="submit" name="direction" value="<<" />
    <input type="submit" name="direction" value=">>" /> 
}

