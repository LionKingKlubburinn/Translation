﻿@using Translation.Models;
@{
    ViewBag.Title = "User";
}

@using (Html.BeginForm("Index", "Account", FormMethod.Post))
{
    <h2>@ViewBag.UserName</h2>
    
    <table style="width:300px">
        <tr>
          <td>Notendanafn:</td>
          <td>@ViewBag.UserName</td>		
        </tr>
        <tr>
          <td>Tölvupóstur:</td>
          <td>@ViewBag.Email</td>		
        </tr>
        <tr>
            <td>Land:</td>
            <td>@ViewBag.Nationality</td>
        </tr>
        <tr>
            <td>Meðlimur síðan:</td>
            <td>@ViewBag.DateCreated</td>
        </tr>
    </table>
    
    @Html.ActionLink("Edit", "Manage");
    
    <h2>Mínar þýðingar</h2>

}