﻿@using Translation.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Manage Account";
}

<h2>@ViewBag.Title.</h2>

<h1>Stilla prófíl</h1>

    <div> Notendanafn : @User.Identity.GetUserName() </div>
    <div> Tölvupóstur: @System.Web.HttpContext.Current.User.Identity.Name </div>
    <div> 
        <p>Sýna öðrum tölvupóst:</p>
        <form>
            <input type="checkbox" name="ShowEmail" value="Yes">Já<br>
        </form> 
    </div>
    <div> Land: </div>
    <div> Mynd: </div>




            <p class="text-success">@ViewBag.StatusMessage</p>
            <div class="row">
                <div class="col-md-12">
                    @if (ViewBag.HasLocalPassword)
                    {
                        @Html.Partial("_ChangePasswordPartial")
                    }
                    else
                    {
                        @Html.Partial("_SetPasswordPartial")
                    }

                </div>
            </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
